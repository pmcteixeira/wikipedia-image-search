<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:id="@+id/card_view"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	card_view:cardUseCompatPadding="true"
	card_view:cardElevation="4dp"
	card_view:cardCornerRadius="3dp">

	<com.pmcteixeira.wikipediaimagesearch.views.PicassoImageView
		android:id="@+id/thumbnail"
		android:layout_width="match_parent"
		android:layout_height="192dp"
		android:scaleType="centerCrop"
		tools:src="@drawable/placeholder"/>


	<TextView
		android:id="@+id/caption"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:paddingTop="@dimen/grid_item_top_padding"
		android:paddingBottom="@dimen/grid_item_bottom_padding"
		android:layout_gravity="bottom"
		android:background="@color/black_semi_transparent"
		android:ellipsize="end"
		android:gravity="center_vertical"
		android:lines="1"
		android:paddingLeft="@dimen/grid_item_left_padding"
		android:textColor="@color/white"
		android:textSize="@dimen/grid_item_text_size"
		tools:text="Caption"/>

</android.support.v7.widget.CardView>